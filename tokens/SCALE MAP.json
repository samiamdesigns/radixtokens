{
  "scale-text": {
    "multiplier": {
      "type": "number",
      "value": "{proportion.scale.minor-third}",
      "description": "Change the value of this token to modify every token in the scales."
    },
    "unitless": {
      "sm": {
        "type": "number",
        "value": "floor(roundTo({scale-TEXT.unitless.md} / {scale.multiplier}, 0) / {scale.factor}) * {scale.factor}"
      }
    }
  },
  "scale-TEXT": {
    "base": {
      "type": "number",
      "value": "16",
      "description": "Tokens used as the default or \"mid-point\" in your scale will have this value without any changes. So when you adjust only the multiplier token, this is not affected."
    },
    "factor": {
      "type": "number",
      "value": "4"
    },
    "unitless": {
      "2xs": {
        "type": "number",
        "value": "floor(roundTo({scale-TEXT.unitless.xs} / {scale.multiplier}, 0) /{scale.factor}) * {scale.factor}"
      },
      "xs": {
        "type": "number",
        "value": "floor(roundTo({scale-text.unitless.sm} / {scale-text.multiplier} , 0) / {scale-TEXT.factor}) * {scale-TEXT.factor}"
      },
      "md": {
        "type": "number",
        "value": "{brand.fontSize.p2}"
      },
      "lg": {
        "type": "number",
        "value": "{scale-TEXT.unitless.md} * {scale-text.multiplier}",
        "description": "roundTo({scale-TEXT.unitless.lg} * {scale.multiplier}, 0"
      },
      "xl": {
        "type": "number",
        "value": "ceil(roundTo({scale-TEXT.unitless.lg} * {scale.multiplier}, 0) / {scale.factor}) * {scale.factor}"
      },
      "2xl": {
        "type": "number",
        "value": "ceil(roundTo({scale-TEXT.unitless.xl} * {scale.multiplier}, 0) / {scale.factor}) * {scale.factor}"
      }
    },
    "radius-factor": {
      "none": {
        "type": "number",
        "value": "0"
      },
      "sm": {
        "type": "number",
        "value": "0.75"
      },
      "md": {
        "type": "number",
        "value": "1"
      },
      "lg": {
        "type": "number",
        "value": "1.5"
      },
      "full": {
        "type": "number",
        "value": "1.5"
      }
    }
  }
}