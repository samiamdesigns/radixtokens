{
  "form": {
    "controls": {
      "select": {
        "item": {
          "gap": {
            "type": "dimension",
            "value": "{density.dimensions.interaction.space.xs}"
          },
          "padding-horizontal": {
            "type": "dimension",
            "value": "{density.dimensions.interaction.space.xs}"
          },
          "padding-vertical": {
            "type": "dimension",
            "value": "{density.dimensions.interaction.space.2xs}"
          },
          "border-radius": {
            "type": "dimension",
            "value": "{density.dimensions.interaction.border-radius.sm}"
          },
          "focus": {
            "border-radius": {
              "$extensions": {
                "studio.tokens": {
                  "modify": {}
                }
              },
              "type": "dimension",
              "value": "{form.controls.select.item.border-radius}  +{density.dimensions.interaction.focus.offset}"
            }
          },
          "indicator": {
            "padding-horizontal": {
              "$extensions": {
                "studio.tokens": {
                  "modify": {}
                }
              },
              "type": "dimension",
              "value": "{density.dimensions.interaction.space.none}"
            },
            "padding-vertical": {
              "$extensions": {
                "studio.tokens": {
                  "modify": {}
                }
              },
              "type": "dimension",
              "value": "{density.dimensions.interaction.space.2xs}"
            },
            "size": {
              "$extensions": {
                "studio.tokens": {
                  "modify": {}
                }
              },
              "type": "dimension",
              "value": "{density.dimensions.interaction.control.default.icon.size}"
            }
          }
        }
      },
      "select-item": {
        "default": {
          "typography": {
            "type": "typography",
            "value": "{theme.text-style.actions.form.select-item}"
          }
        },
        "selected": {
          "default": {
            "bg-color": {
              "type": "color",
              "value": "{surface.color.interactive.neutral.transparent}"
            },
            "label": {
              "color": {
                "type": "color",
                "value": "{surface.color.foreground.neutral.default}"
              }
            },
            "icon": {
              "color": {
                "type": "color",
                "value": "{surface.color.foreground.neutral.default}"
              }
            }
          },
          "hover": {
            "bg-color": {
              "type": "color",
              "value": "{surface.color.input.background.selected}"
            },
            "label": {
              "color": {
                "type": "color",
                "value": "{surface.color.input.foreground.hover}"
              }
            },
            "icon": {
              "color": {
                "type": "color",
                "value": "{surface.color.input.foreground.hover}"
              }
            }
          },
          "pressed": {
            "bg-color": {
              "type": "color",
              "value": "{surface.color.input.background.selected-emphasis}"
            },
            "label": {
              "color": {
                "type": "color",
                "value": "{surface.color.input.foreground.pressed}"
              }
            },
            "icon": {
              "color": {
                "type": "color",
                "value": "{surface.color.input.foreground.pressed}"
              }
            }
          },
          "inactive": {
            "bg-color": {
              "type": "color",
              "value": "{surface.color.interactive.neutral.transparent}"
            },
            "label": {
              "color": {
                "type": "color",
                "value": "{surface.color.input.foreground.inactive}"
              }
            },
            "icon": {
              "color": {
                "type": "color",
                "value": "{surface.color.input.foreground.inactive}"
              }
            }
          },
          "disabled": {
            "bg-color": {
              "type": "color",
              "value": "{surface.color.interactive.neutral.transparent}"
            },
            "label": {
              "color": {
                "type": "color",
                "value": "{surface.color.input.foreground.disabled}"
              }
            },
            "icon": {
              "color": {
                "type": "color",
                "value": "{surface.color.input.foreground.disabled}"
              }
            }
          }
        }
      },
      "group": {
        "wrapper": {
          "gap": {
            "type": "dimension",
            "value": "{density.dimensions.interaction.space.xs}"
          },
          "padding-horizontal": {
            "type": "dimension",
            "value": "{density.dimensions.interaction.space.xs}"
          },
          "padding-vertical": {
            "type": "dimension",
            "value": "{density.dimensions.interaction.space.xs}"
          }
        }
      }
    }
  }
}