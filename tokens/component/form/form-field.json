{
  "form": {
    "field": {
      "header": {
        "text-wrapper": {
          "gap": {
            "type": "dimension",
            "value": "{density.dimensions.interaction.space.xs}"
          },
          "padding-horizontal": {
            "type": "dimension",
            "value": "{density.dimensions.interaction.space.xs}"
          },
          "padding-vertical": {
            "type": "dimension",
            "value": "{density.dimensions.interaction.space.sm}"
          }
        },
        "gap": {
          "type": "dimension",
          "value": "{density.dimensions.interaction.space.xs}"
        },
        "padding-horizontal": {
          "type": "dimension",
          "value": "{density.dimensions.interaction.space.none}"
        },
        "padding-vertical": {
          "type": "dimension",
          "value": "{density.dimensions.interaction.space.none}"
        },
        "label": {
          "color": {
            "type": "color",
            "value": "{surface.color.foreground.neutral.default}"
          }
        },
        "helper": {
          "color": {
            "type": "color",
            "value": "{surface.color.foreground.neutral.minimal}"
          }
        }
      },
      "label": {
        "typography": {
          "$extensions": {
            "studio.tokens": {
              "modify": {}
            }
          },
          "type": "typography",
          "value": "{theme.text-style.actions.form.label}"
        }
      },
      "helper": {
        "typography": {
          "$extensions": {
            "studio.tokens": {
              "modify": {}
            }
          },
          "type": "typography",
          "value": "{theme.text-style.actions.form.helper}"
        }
      },
      "validation-message": {
        "typography": {
          "$extensions": {
            "studio.tokens": {
              "modify": {}
            }
          },
          "type": "typography",
          "value": "{theme.text-style.actions.form.validation-message}"
        },
        "background-color": {
          "type": "color",
          "value": "{surface.color.feedback.danger.emphasis}"
        },
        "border-color": {
          "type": "color",
          "value": "{surface.color.feedback.danger.minimal}"
        },
        "text": {
          "color": {
            "type": "color",
            "value": "{surface.color.feedback.danger.on-danger}"
          }
        },
        "gap": {
          "type": "dimension",
          "value": "{density.dimensions.interaction.space.sm}"
        },
        "padding-horizontal": {
          "type": "dimension",
          "value": "{density.dimensions.interaction.space.sm}"
        },
        "padding-vertical": {
          "type": "dimension",
          "value": "{density.dimensions.interaction.space.sm}"
        },
        "border-radius": {
          "type": "dimension",
          "value": "{density.dimensions.interaction.border-radius.sm}"
        },
        "border-width": {
          "type": "dimension",
          "value": "{density.dimensions.interaction.border-width.default}"
        },
        "border": {
          "type": "border",
          "value": {
            "color": "{form.field.validation-message.border-color}",
            "width": "{form.field.validation-message.border-width}",
            "style": "solid"
          }
        },
        "icon": {
          "color": {
            "type": "color",
            "value": "{surface.color.feedback.danger.on-danger}"
          }
        },
        "icon-size": {
          "value": "{density.dimensions.interaction.size.05}",
          "type": "dimension"
        }
      }
    }
  }
}