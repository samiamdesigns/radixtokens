{
  "content": {
    "scrollbar": {
      "track": {
        "padding": {
          "type": "dimension",
          "value": "{density.dimensions.interaction.space.2xs}"
        },
        "size": {
          "type": "dimension",
          "value": "{density.dimensions.interaction.size.05}"
        },
        "default": {
          "background-color": {
            "type": "color",
            "value": "{surface.color.interactive.neutral.glass}"
          }
        },
        "border-width": {
          "type": "dimension",
          "value": "{density.dimensions.interaction.border-width.default}"
        }
      },
      "thumb": {
        "border-radius": {
          "type": "dimension",
          "value": "{density.dimensions.interaction.border-radius.full}"
        },
        "default": {
          "bg-color": {
            "type": "color",
            "value": "{surface.color.interactive.neutral.muted}"
          }
        }
      }
    }
  }
}